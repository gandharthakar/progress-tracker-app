{
  "name": "progress-tracker-app",
  "version": "1.0.0",
  "description": "This is very simple tool where you can track your dailly tasks & its progress visually.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "watch": "nodemon -e ts --exec npm run build",
    "dev": "nodemon dist/index.js",
    "bs": "browser-sync start --proxy localhost:48256 --files=**/*",
    "build": "babel src --out-dir dist --extensions \".ts,.tsx\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:gandharthakar/progress-tracker-app.git"
  },
