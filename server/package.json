  "bugs": {
    "url": "https://github.com/gandharthakar/progress-tracker-app/issues"
  },
  "homepage": "https://github.com/gandharthakar/progress-tracker-app#readme",
  "dependencies": {
    "@babel/cli": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.7.6",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.2",
